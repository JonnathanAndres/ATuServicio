<table class="table" id="listado">
  <tbody>
    <tr id="filtros">
      <td>
        <i class="icon-01"></i>
        <label>Prestador de salud</label>
        <ul class="filtro-hidden">
          <li>
            <span class="round-btn">1</span>
            Sede Primaria
          </li>
          <li>
            <span class="round-btn">2</span>
            Sede Secundaria
          </li>
          <li>
            <span class="round-btn">P</span>
            Policlínicas
          </li>
          <li>
            <span class="round-btn">U</span>
            Urgencia
          </li>
        </ul>
      </td>
      <td>
        <i class="icon-02"></i>
        <label>Tiempo de espera</label>
        <ul class="filtro-hidden">
          <li>
            <span class="round-btn">1</span>
            Medicina gral.
          </li>
          <li>
            <span class="round-btn">2</span>
            Cirugía gral.
          </li>
          <li>
            <span class="round-btn">P</span>
            Pediatría
          </li>
          <li>
            <span class="round-btn">G</span>
            Ginecología
          </li>
          <li>
            <span class="round-btn">M</span>
            Médico de referencia
          </li>
        </ul>
      </td>
      <td>
        <i class="icon-03"></i>
        <label>Metas asistenciales</label>
        <ul class="filtro-hidden">
          <li>
            <span class="round-btn">S</span>
            Satisfaccion
          </li>
          <li>
            <span class="round-btn">A</span>
            Disp.agenda
          </li>
          <li>
            <span class="round-btn">T</span>
            Tramites
          </li>
          <li>
            <span class="round-btn">M</span>
            Disp. medicam.
          </li>
          <li>
            <span class="round-btn">D</span>
            Info. derechos
          </li>
          <li>
            <span class="round-btn">Q</span>
            Recep. quejas
          </li>
        </ul>
      </td>
      <td>
        <i class="icon-04"></i>
        <label>Costo promedio</label>
        <ul class="filtro-hidden">
          <li>
            <span class="round-btn">M</span>
            Medicamentos
          </li>
          <li>
            <span class="round-btn">T</span>
            Tickets
          </li>
          <li>
            <span class="round-btn">U</span>
            Urgencia
          </li>
          <li>
            <span class="round-btn">E</span>
            Estudios
          </li>
        </ul>
      </td>
      <td>
        <i class="icon-05"></i>
        <label>Personal disponible</label>
        <ul class="filtro-hidden">
          <li>
            <span class="round-btn">G</span>
            Medicos generales
          </li>
          <li>
            <span class="round-btn">F</span>
            Medicos familia
          </li>
          <li>
            <span class="round-btn">P</span>
            Pediatras
          </li>
          <li>
            <span class="round-btn">G</span>
            Ginecólogos
          </li>
          <li>
            <span class="round-btn">E</span>
            Enfermeros
          </li>
          <li>
            <span class="round-btn">E</span>
            Lic. en Enfermería
          </li>
        </ul>
      </td>
      <td>
        <%= image_tag("menu/derechos.png", alt: "Derechos de usuarios") %>
        <label>Derechos de usuarios</label>
      </td>
      <td>
        <i class="icon-06"></i>
        <label>Cantidad de socios</label>
      </td>
    </tr>
    <tr>
      <td colspan="7">
        <button class="referencias">
          Ver referencias
        </button>
      </td>
    </tr>
    <tr>
      <td class="title">
        Promedio Nacional
      </td>
      <td>
        <i class="icon-clock"> </i>
      </td>
      <td>
        <progress max="100" value="80"></progress>
      </td>
      <td>
        <i class="icon-money"> </i>
      </td>
      <td>
        <i class="icon-user"> </i>
      </td>
      <td>
        <progress max="100" value="80"></progress>
      </td>
      <td>
        <i class="icon-user"> </i>
      </td>
    </tr>
    <% @sel_providers.each do |provider| %>
      <tr>
        <td>
          <%=provider.nombre_completo %>
        </td>
        <td>
          <%= show_if_valid(provider, :tiempo_espera_medicina_general) %>/
          <%= show_if_valid(provider, :tiempo_espera_pediatria) %>/
          <%= show_if_valid(provider, :tiempo_espera_ginecotocologia) %>/
          <%= show_if_valid(provider, :tiempo_espera_medico_referencia) %>/
        </td>
        <td>
          Metas
          <%= provider.meta_medico_referencia %>/
          <%= provider.meta_ninos_controlados %>/
          <%= provider.meta_embarazadas %>/
          <%= provider.espacio_adolescente %>/
        </td>
        <td>
          <%= provider.average(:medicamentos) %>/
          <%= provider.average(:tickets) %>/
          <%= provider.average(:tickets_urgentes) %>/
          <%= provider.average(:estudios) %>/
        </td>
        <td>Derechos <%=provider.id %></td>
        <td><%=provider.afiliados%></td>
      </tr>
    <% end %>
  </tbody>
</table>
